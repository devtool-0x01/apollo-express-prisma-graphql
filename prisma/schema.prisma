datasource db {
  // provider = "postgresql"
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Country {
  id            Int            @id @default(autoincrement())
  name          String
  countryCode   String
  manufacturers Manufacturer[]
}

// model Category {
//   id          Int @id @default(autoincrement())
//   name        String @unique
// }

model Manufacturer {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  vehicles    Vehicle[]
  country     Country   @relation(references: [id], fields: [countryId])
  countryId   Int
}

model VehicleModel {
  id          Int     @id @default(autoincrement())
  name        String
  year        Int?
  description String?
  vehicle     Vehicle @relation(references: [id], fields: [vehicleId])
  vehicleId   Int
}

model Vehicle {
  id             Int            @id @default(autoincrement())
  name           String         @unique
  year           Int
  description    String?
  engineType     String?
  engineSize     Int?
  manufacturers  Manufacturer   @relation(references: [id], fields: [manufacturerId])
  manufacturerId Int
  vehicleModel   VehicleModel[]
}
